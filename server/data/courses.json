          "documents": [
            {
              "title": "What is HTML?",
              "content": [
                {
                  "type": "sentence",
                  "text": "HTML stands for HyperText Markup Language."
                },
                {
                  "type": "sentence",
                  "text": "It is the standard language for creating web pages."
                },
                {
                  "type": "snippet",
                  "code": "<!DOCTYPE html>\n<html>\n<head>\n<title>Page Title</title>\n</head>\n<body>\n</body>\n</html>"
                }
              ],
              "locked": false
            },
            {
              "title": "HTML Structure",
              "content": [
                {
                  "type": "sentence",
                  "text": "HTML documents have a structure that includes elements such as doctype, html, head, and body tags."
                },
                {
                  "type": "sentence",
                  "text": "The doctype declaration defines the document type."
                },
                {
                  "type": "sentence",
                  "text": "The html element is the root element of an HTML page."
                },
                {
                  "type": "sentence",
                  "text": "The head element contains meta-information about the HTML document."
                },
                {
                  "type": "sentence",
                  "text": "The body element contains the visible page content."
                },
                {
                  "type": "snippet",
                  "code": "<!DOCTYPE html>\n<html>\n<head>\n<title>HTML Structure</title>\n</head>\n<body>\n<p>This is a paragraph.</p>\n</body>\n</html>"
                }
              ]
            },
            {
              "title": "Basic HTML Tags",
              "content": [
                {
                  "type": "sentence",
                  "text": "Learn about basic HTML tags like <p>, <a>, <div>, and more."
                },
                {
                  "type": "sentence",
                  "text": "The <p> tag defines a paragraph."
                },
                {
                  "type": "sentence",
                  "text": "The <a> tag defines a hyperlink."
                },
                {
                  "type": "sentence",
                  "text": "The <div> tag defines a division or a section in an HTML document."
                },
                {
                  "type": "snippet",
                  "code": "<div>\n<p>This is a paragraph.</p>\n<a href=\"https://www.example.com\">This is a link</a>\n</div>"
                }
              ]
            }
